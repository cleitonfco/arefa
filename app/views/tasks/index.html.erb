<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Done</th>
    <th>Feedback</th>
    <th>Priority</th>
    <th>Active</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.description %></td>
    <td><%=h task.done %></td>
    <td><%=h task.feedback %></td>
    <td><%=h task.priority %></td>
    <td><%=h task.active %></td>
    <td><%= link_to 'Show', project_task_path(@project, task) %></td>
    <td><%= link_to 'Edit', [:edit, @project, task] %></td>
    <td><%= link_to 'Destroy', project_task_path(@project, task), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_project_task_path(@project) %>
